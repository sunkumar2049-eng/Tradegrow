# Production Environment Configuration for TradingGrow
# Copy this to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION (Required)
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/tradinggrow_prod
PGHOST=localhost
PGPORT=5432
PGUSER=tradinggrow_user
PGPASSWORD=secure_database_password
PGDATABASE=tradinggrow_prod

# ===========================================
# FLASK APPLICATION SETTINGS (Required)
# ===========================================
FLASK_ENV=production
DEBUG=False
SESSION_SECRET=generate-a-secure-64-character-random-string-here
FLASK_SECRET_KEY=another-secure-64-character-random-string

# ===========================================
# FINANCIAL DATA API KEYS (Required for Real Data)
# ===========================================
# Alpha Vantage - Free tier: 5 API requests per minute, 500 per day
# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Polygon.io - Alternative financial data provider
# Get from: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# Financial Modeling Prep - Alternative provider
# Get from: https://financialmodelingprep.com/developer/docs
FMP_API_KEY=your_fmp_api_key_here

# ===========================================
# AUTHENTICATION PROVIDERS (Optional)
# ===========================================
# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# ===========================================
# PAYMENT PROCESSING (Optional)
# ===========================================
# Stripe - Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===========================================
# EMAIL SERVICES (Optional)
# ===========================================
# SendGrid for transactional emails
SENDGRID_API_KEY=your_sendgrid_api_key

# SMTP Configuration (Alternative to SendGrid)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===========================================
# SECURITY SETTINGS
# ===========================================
# JWT Secret for API tokens
JWT_SECRET_KEY=another-64-character-secret-for-jwt-tokens

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Server settings
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Domain settings
DOMAIN=yourdomain.com
HTTPS_ONLY=True

# ===========================================
# MONITORING & LOGGING (Optional)
# ===========================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Log level
LOG_LEVEL=INFO

# ===========================================
# CACHE SETTINGS (Optional)
# ===========================================
# Redis for caching
REDIS_URL=redis://localhost:6379/0

# ===========================================
# BACKUP SETTINGS
# ===========================================
# S3 for backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=tradinggrow-backups
AWS_REGION=us-east-1